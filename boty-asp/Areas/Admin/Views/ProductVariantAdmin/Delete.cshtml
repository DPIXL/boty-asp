@model boty_asp.Models.ProductVariant

@{
    ViewData["Title"] = "Delete Item";
}

<h3>Are you sure you want to delete this?</h3>
<div class="alert alert-danger">
    <strong>Warning:</strong> This action cannot be undone.
</div>

<div>
    <h4>ID: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Color
        </dt>
        <dd class="col-sm-10">
            @Model.Color.Name
        </dd>
        <dt class="col-sm-2">
            Size
        </dt>
        <dd class="col-sm-10">
            @Model.Size.SizeValue
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        
        <a asp-action="Index" asp-route-id="@Model.ProductId" class="btn btn-secondary rounded-3">Cancel</a>
        <input type="submit" value="Delete" class="btn btn-danger rounded-pill" />
    </form>
</div>