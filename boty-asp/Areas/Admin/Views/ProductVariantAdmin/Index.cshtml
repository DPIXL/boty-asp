@{
    @model IEnumerable<boty_asp.Models.ProductVariant>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Manage Items in Stock for product @ViewBag.Product.Name</h2>
    <a asp-action="Create" asp-route-productid="@ViewBag.Product.Id" class="btn btn-success rounded-pill">+ Add New Item</a>
</div>

<table class="table">
    <thead class="table-primary">
    <tr>
        <th>Color</th>
        <th>Size</th>
        <th>In Stock</th>
        <th style="width: 1%; white-space: nowrap;">Actions</th> </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Color.Name
            </td>
            <td>
                @item.Size.SizeValue
                </td>
            <td>
                @item.StockQuantity
            </td>
            <td style="width: 1%; white-space: nowrap;" class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning rounded-pill">
                    Edit
                </a>

                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-3">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>