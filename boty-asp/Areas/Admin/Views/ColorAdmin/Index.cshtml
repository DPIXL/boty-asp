@model boty_asp.Areas.Admin.ViewModels.ListsColorSizeViewModel
@{}
<span class="row g-4">
<span class="col-md-6">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Manage Colors</h2>
        <a asp-action="Create" class="btn btn-success rounded-pill">+ Add New Color</a>
    </div>

    <table class="table">
        <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>Hex Code</th>
            <th style="width: 1%; white-space: nowrap;">Actions</th> </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Colors)
        {
            <tr>
                <td>
                    <strong>@item.Name</strong>
                </td>
                <td>
                    <strong>@item.HexCode</strong>
                </td>
                <td style="width: 1%; white-space: nowrap;" class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning rounded-pill">
                        Edit
                    </a>

                    <a asp-action="DeleteColor" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-3">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</span>
<span class="col-md-6">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Manage Sizes</h2>
        <a asp-action="Create" class="btn btn-success rounded-pill">+ Add New Size</a>
    </div>

    <table class="table">
        <thead class="table-primary">
        <tr>
            <th>Size</th>
            <th style="width: 1%; white-space: nowrap;">Actions</th> </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Sizes)
        {
            <tr>
                <td>
                    <strong>@item.SizeValue</strong>
                </td>
                <td style="width: 1%; white-space: nowrap;" class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning rounded-pill">
                        Edit
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-3">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</span>
</span>