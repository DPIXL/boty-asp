@{
    @model IEnumerable<boty_asp.Models.Product>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Manage Products</h2>
    <a asp-action="Create" class="btn btn-success rounded-pill">+ Add New Product</a>
</div>

<table class="table">
    <thead class="table-primary">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Discount</th>
        <th style="width: 1%; white-space: nowrap;">Actions</th> </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <strong>@item.Name</strong>
            </td>
            <td>
                @Math.Round((float)(item.BasePrice)) Kƒç
                </td>
            <td>
                @Math.Round((float)(100*item.DiscountPercent)) %
            </td>
            <td style="width: 1%; white-space: nowrap;" class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning rounded-pill">
                    Edit
                </a>

                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-3">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>