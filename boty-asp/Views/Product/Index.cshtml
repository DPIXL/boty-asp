@model boty_asp.ViewModels.ProductViewModel

<span class="path"><a asp-controller="Home" asp-action="Index">Domů</a><p>></p>
    @for (int i = 0; i < ViewBag.Categories.Count - 1; i++) {
        <a asp-controller="WholeOffer" asp-action="Index" asp-route-catId="@ViewBag.Categories[i].Id">@ViewBag.Categories[i].Name</a><p>></p>
    }<a class="current" asp-controller="WholeOffer" asp-action="Index" asp-route-catId="@Model.Product.Category.Id">@Model.Product.Category.Name</a></span>
<div class="product">
    <form asp-action="AddToOrder">
        <input type="hidden" asp-for="ProductId"></input>
        <span class="grid">
            <span>
                <img src="@Model.Product.ImagesPath" asp-append-version="true" alt="bota">

            </span>
            <span>
                <span class="nadpis">
                    <h1>@Model.Product.Name</h1><a asp-controller="Home" asp-action="Index"><img class="bunglogo" src="~/img2/logo.webp" alt="logo"></a></span>
                <span class="hideonmobile">
                    <p class="popis">@Model.Product.Description</p></span>

                <!-- separator??  -->

                <hr>
                @if (Model.Product.ProductVariants.Any()) {
                    <span class="properthelper">
                        <span>
                            <h3>Barva</h3>
                            <span class="colors">
                                @foreach (var c in @ViewBag.DistinctColors) {
                                    <input asp-for="ColorId" type="radio" id="color @c.Id" value="@c.Id" onchange="window.location.href = '@Url.Action("Index", new { id = Model.Product.Id })?colorId=' + @c.Id" checked="@(c.Id == ViewBag.SelectedColorId ? "checked" : null)"/>
                                    <label style="background-color: @c.HexCode" for="color @c.Id" class="col"></label>
                                }

                            </span>
                        </span>
                        <span>
                            <h3>Velikost</h3>
                            <span class="sizes">
                                @foreach (var s in (List<SelectListItem>)@ViewBag.SizeList) {
                                    <input asp-for="SizeId" value=@s.Value id="num @s.Value" type="radio" disabled="@(s.Disabled ? "disabled" : null)">
                                    <label for="num @s.Value" class="n1">@s.Text</label>
                                }

                            </span>
                        </span>
                    </span>


                    <hr>

                    <span style="display: flex; flex-direction: row; justify-content: space-between"><h2>Skladem</h2>@if (!ViewBag.AddToOrderState) {
                        <p style="color: #FF0000; font-weight: bold; margin: 0; align-self: center">@ViewBag.Message</p>
                    }
                    else {
                        <p style="color: #179c17; font-weight: bold; margin: 0; align-self: center" >@ViewBag.Message</p>
                    }
    </span>
                    <span class="items">
                            <p class="cena2">@(Math.Round(Model.Product.BasePrice + (Model.Product.BasePrice * (Model.Product.DPH ?? 0m)))) Kč</p>
        <span>
            <p class="cena">@(Math.Round((Model.Product.BasePrice + (Model.Product.BasePrice * (Model.Product.DPH ?? 0m))) * (1 - (Model.Product.DiscountPercent ?? 0m)))) Kč</p>
            <button class="dokosiku" type="submit"><img src="~/img/kosik_white.png">
                <p class="short">Do košíku</p>
                <p class="long">Přidat do košíku</p></button></span>
    </span>
                }
                else {
                    <h2 style="color: #bdbdbd">NENÍ SKLADEM :(</h2>
                }
            </span>
        </span>
    </form>

