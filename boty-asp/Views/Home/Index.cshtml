@{
    @model IEnumerable<boty_asp.Models.Product>
}
<section class="billboard">
    <span class="gridhelper">
    <div class="billcontent">
        <h2>NOVÁ DÍVČÍ KOLEKCE ŠETRNÁ K DĚTSKÝM NOHÁM</h2>
        <h1>NEJEN DO MĚSTA, ALE I DO PŘÍRODY</h1>
        <a class="billbutton" asp-controller="WholeOffer" asp-action="Index">zobrazit celou nabídku</a>
    </div>
    </span>
    <span class="billboardselect">
        <input id="radio1" name="billboard_rad" type="radio" checked="checked">
        <label for="radio1"></label>
        <input id="radio2" name="billboard_rad" type="radio">
        <label for="radio2"></label>
        <input id="radio3" name="billboard_rad" type="radio">
        <label for="radio3"></label>
    </span>
</section>

<section class="categories">
    <a href=""><img src="~/img/01.png" alt="kluk"><p>KLUČIČÍ<br>BOTY</p></a>
    <a href=""><img src="~/img/02.png" alt="holka"><p>DÍVČÍ BOTY</p></a>
    <a href=""><img src="~/img/03-01.png" alt="boty"><p>JAK SPRÁVNĚ<br>VYBRAT? @ViewBag.Debug</p></a>
</section>

<div class="feet"><img src="~/img/Group 295.png" alt="logo"></div>

<section class="nabidkanahled">
    <section class="h1">
        <h1 id="part1">Nejnovější kousky </h1><h1 id="part2">v naší nabídce</h1>
    </section>

    <section class="items">
        @foreach(var item in Model) {
            <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id">
                <img src="@(Url.Content(item.ImagesPath) + "/0.png")" alt="boty">
                <p>@item.Name</p>
                <span class="bottom">
                    <span class="bottomtext">
                        <p class="cena">@(Math.Round((item.BasePrice + (item.BasePrice * (item.DPH??0m))) * (1 - (item.DiscountPercent??0m)))) Kč</p>
                        <p class="cena2">@(Math.Round(item.BasePrice + (item.BasePrice * (item.DPH??0m)))) Kč</p></span>
                    <img class="kosik" src="~/img/Group 6.png" alt="kosik">
                </span>
            </a>
        }
    </section>

    <a asp-controller="WholeOffer" asp-action="Index" class="celanabidkabutton">zobrazit celou nabídku</a>

</section>

<div class="feet"> <img src="~/img/Group 295.png" alt="feet"> </div>

<section class="circlenabidka">
    <a href="">
        <div class="circleshi">
            <img src="~/img/Group 195.png" alt="domecek">
        </div>
        <p>VŠE MÁME SKLADEM</p>
    </a>
    <a href="">
        <div class="circleshi">
            <img src="~/img/Group 196.png" alt="balicek">
        </div>
        <p>DOPRAVA ZDARMA</p>
    </a>
    <a href="">
        <div class="circleshi">
            <img src="~/img/Group 293.png" alt="nozicka">
        </div>
        <p>JAK MĚŘIT VELIKOST</p>
    </a>
</section>

<footer class="mailfooter">
    <h1>Nezmeškejte nové a výhodné akce</h1>
    <h2>Zadejte svůj e-mailem a obratem vám zašleme PDF s inspirací zdarma.</h2>
    <form action="newsletter.php">
        <span class="emailline">
            <label>
                <img class="emailpic" src="~/img/mail-tinted.png" alt="mail">
                <input name="emailinput" type="email" required placeholder="Zadej svůj email...">
            </label>
            <button class="subscribebtn" type="submit"> přihlásit</button>
        </span>
    </form>
</footer>